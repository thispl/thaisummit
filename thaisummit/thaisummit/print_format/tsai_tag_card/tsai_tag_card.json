 "html": "<div class=\"container\">\n    {% set supplier = frappe.get_doc(\"TSAI Supplier\",doc.supplier_code) %}\n    {% for i in doc.invoice_items %}\n    {% set pkg_std = i.key_qty/i.packing_standard %}\n    {% for d in range(pkg_std|int)%}\n    <div class=\"card\">\n        <table border=\"2\">\n            <tr>\n                <td colspan=\"4\" width=85% style=\"word-wrap: break-word; font-size: 8px;\"><b>\n                    <!--<img src=\"https://bwipjs-api.metafloor.com/?bcid=code128&amp;text={{ doc.invoice_no }}\" width=\"100%\"-->\n                    <img src=\"https://bwipjs-api.metafloor.com/?bcid=code128&amp;text={{ doc.invoice_no }}\" width=\"80%\"\n                    \n                    height=\"15\" /></b></td>\n                <td class=\"loc\" colspan=\"2\" >Location: </td>\n            </tr>\n            {% set part = frappe.get_doc(\"TSAI Part Master\",i.mat_no) %}\n    \n            <tr>\n                <td colspan=\"4\" width=80%>\n                    <center><b>{{supplier.supplier_name}}</b></center>\n                </td>\n                {% if part.ndol == \"YES\" %} \n                <td colspan=\"2\" style=\"background-color: white; text-align: center;\">\n                    <span style=\"font-size: 10px; color: black; background-color: black; padding: 5px 10px;\">&#9632;</span>\n                </td>\n\n\n                \n                {% else %}\n                <td colspan=\"2\"></td>\n                {% endif%}\n\n            </tr>\n            </table>\n<table border=\"2\" style=\"border-top:hidden\">\n            <tr>\n                <td colspan=\"2\" style=\"border-bottom-style: hidden;border-right-style: hidden\"><b>MAT No :</b></td>\n                <td colspan=\"2\" style=\"border-bottom-style: hidden;border-right-style: hidden\"> <b>Part No:</b></td>\n                <td colspan=\"2\" style=\"border-bottom-style: hidden;\"><b>Part Name:</b></td>\n            </tr>\n            <tr>\n                <td colspan=\"2\" style=\"border-bottom-style: hidden;border-right-style: hidden\">{{i.mat_no}}<br>\n                <img src=\"https://bwipjs-api.metafloor.com/?bcid=code128&amp;text={{ i.mat_no }}\" width=\"100%\"\n                    height=\"15\" /></td>\n                <td colspan=\"2\" style=\"border-bottom-style: hidden;border-right-style: hidden\">{{i.parts_no}}</td>\n                <td colspan=\"2\" style=\"border-bottom-style: hidden;\">{{i.parts_name}}</td>\n            </tr>\n\n            <tr>\n                <td colspan=\"2\" style=\"border-bottom-style: hidden;border-right-style: hidden\"><b>QTY</b></td>\n                <td colspan=\"2\" style=\"border-bottom-style: hidden;border-right-style: hidden\"><b>Invoice No</b></td>\n                <td colspan=\"2\" style=\"border-bottom-style: hidden;\"><b>Invoice Date</b></td>\n            </tr>\n\n            <tr>\n                <td colspan=\"2\" style=\"border-right-style: hidden\">{{i.packing_standard}}</td>\n                <td colspan=\"2\" style=\"border-right-style: hidden\">{{doc.invoice_no}}</td>\n                <td colspan=\"2\" >{{ doc.get_formatted(\"invoice_date\") }}</td>\n            </tr>\n\n            <!--<tr>-->\n            <!--    <td colspan=\"6\"><img src=\"https://bwipjs-api.metafloor.com/?bcid=code128&amp;text={{ i.mat_no }}\" width=\"40%\"-->\n            <!--        height=\"15\" /> &nbsp;&nbsp;&nbsp;&nbsp; Checked By</td>-->\n            <!--</tr>-->\n        </table>\n    </div>\n    {% endfor %}\n    {%endfor%}\n</div>",
